<resources>

    <!-- Base application theme. -->
    <style name="ConnectTheme" parent="UIKit.ToolbarActivity">
        <!-- Customize your theme here. -->
    </style>

    <style name="Button">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>
    <style name="ButtonPositive" parent="Button">
        <item name="android:text">Connect</item>
        <item name="android:background">@color/oneEduGreen</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonNeutral" parent="Button">
        <item name="android:text">Forget</item>
        <item name="android:background">@color/oneEduPink</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="ButtonNegative" parent="Button">
        <item name="android:text">Modify</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@color/oneEduGrey</item>
    </style>


</resources>
